<h1><%= @post.title %></h1>

<%= @post.body %>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>
	<p><b><%= comment.commenter %> wrote: </b><%= comment.body %></p>
	<p><%= time_ago_in_words comment.created_at %> ago</p>
	<p><%= link_to "Delete comment", [@post, comment], method: :delete, data: {confirm: "Are you sure?"} %></p>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
	<p><%= f.label "Name" %><br />
		<%= f.text_field :commenter %></p>
	<p><%= f.label :body %><br />
		<%= f.text_area :body, :size => '40x10'%></p>
	<p><%= f.submit "Post comment" %></p>
<% end %>

<p>
<%= link_to "Back", posts_path %> 
|
<%= link_to "Edit", edit_post_path(@post)%>
|
<%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"} %>
</p>
